#bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle # mute sound

##### Application shortcuts #####

# calculator shortcut
bindsym XF86Calculator exec gnome-calculator
bindsym Print exec xfce4-screenshooter
bindsym Mod1+Control+m exec clementine & i3 workspace $WS5 # open music player and move to workspace
bindsym Mod1+Control+f exec nemo --no-desktop

# lockscreen
bindsym Mod1+Control+l exec "~/bin/lockscreen.sh"
exec xautolock -time 15 -locker '~/bin/lockscreen.sh' &

